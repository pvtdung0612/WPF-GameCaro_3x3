<Window x:Class="WPF_GameCaro_3x3.Option"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_GameCaro_3x3"
        mc:Ignorable="d"
        Title="Option" Height="190" Width="200"
        ResizeMode="NoResize">
    <StackPanel>
        <WrapPanel Background="LightGray" Margin="5">
            <TextBlock Margin="5" Text="Player choose X"/>
        </WrapPanel>
        <WrapPanel Background="LightGray" Margin="5">
            <TextBlock Margin="5" Text="Computer is first: "/>
            <CheckBox x:Name="ckbFirst" Margin="0 6 5 5"/>
        </WrapPanel>
        <WrapPanel Background="LightGray" Margin="5">
            <TextBlock Margin="5 10 5 0" Text="Level: "/>
            <ComboBox x:Name="cbxLevel" Height="20" Margin="5" Width="50"/>
        </WrapPanel>
        <TextBlock Margin="15 0 15 0" Text="you need new game to use this option" TextAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
